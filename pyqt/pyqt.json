{
    "name": "pyqt",
    "build-options": {
        "env": {
            "EXTRA_PYQT_CONFIG_OPTS": "--disabled-feature=PyQt_OpenGL_ES2"
        }
    },
    "config-opts": [
        "--concatenate=1",
        "--confirm-license",
        "--debug",
        "--no-make",
        "--verbose",
        "--api-dir=/app/share/qt/qsci/api/python",
        "--qmake-setting=QMAKE_CFLAGS_RELEASE='-I/usr/include/python_pyver/'",
        "--qmake-setting=QMAKE_CXXFLAGS_RELEASE='-I/usr/include/python_pyver/'",
        "--scripts-dir=/app/bin",
        "--target-dir=/app/lib/python_pyver/site-packages",
        "--qt-shared"
    ],
    "make-args": [
        "--directory=build"
    ],
    "make-install-args": [
        "--directory=build"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://files.pythonhosted.org/packages/b2/c9/266b12a9826452e387f0ff4f0b4bbd29e11d2de81a5f60c0975933b34e7f/PyQt6-6.4.0.tar.gz",
            "sha256": "91392469be1f491905fa9e78fa4e4059a89ab616ddf2ecfd525bc1d65c26bb93",
            "x-checker-data": {
                "type": "pypi",
                "name": "PyQt6",
                "versions": {"<":  "6.5"}
            }
        },
        {
            "type": "patch",
            "path": "pyqt-plugins-dir.patch"
        },
        {
            "type": "file",
            "path": "configure"
        },
        {
            "type": "file",
            "path": "../sip/sip-build-configure.in",
            "dest-filename": "configure.sip-build"
        }
    ],
    "modules": [
        "../sip/sip.json",
        "../pyqt-builder/pyqt-builder.json",
        "../pyqt-sip/pyqt-sip.json"
    ]
}
